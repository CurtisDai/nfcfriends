<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicInfoActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/icon_square_camera"
            />

        <ImageView
            android:id="@+id/album"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="250dp"
            android:src="@drawable/icon_square_alburm"/>

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/person"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/icon_name" />

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="290dp">
        <EditText
            android:id="@+id/name_info"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="@string/Name"/>
    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/call"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/icon_phone" />

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="365dp">
        <EditText
            android:id="@+id/phone_info"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint = "@string/phone">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>



    <ImageView
        android:id="@+id/orgnization"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/icon_company" />


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="440dp">
        <EditText
            android:id="@+id/organ_info"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="@string/company">

        </EditText>
    </com.google.android.material.textfield.TextInputLayout>



    <ImageView
        android:id="@+id/location"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="525dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/icon_location" />


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="515dp">
        <EditText
            android:id="@+id/loc_info"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="@string/location">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>



    <ImageView
        android:id="@+id/email"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/icon_email" />


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="590dp">
        <EditText
            android:id="@+id/email_info"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="@string/Email"/>
    </com.google.android.material.textfield.TextInputLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_submit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />



    <Button
        android:id="@+id/OCRButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:layout_alignParentBottom="true"
        android:text="OCR"
        android:textAllCaps="false"
        android:textColor="#424242"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf ="@id/button_submit"
        app:layout_constraintRight_toLeftOf="@id/button_submit" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners_blue"
        android:text="Submit" />


</RelativeLayout>